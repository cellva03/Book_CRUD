<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <main id="site-mai">
      <div class="form-title text-center" style="margin-top: 20px">
        <h2>Update User</h2>
      </div>
      <div class="containers" style="margin-top: 30px">
        <!-- user form -->

        <!-- form -->
        <form
          method="post"
          id="update_user"
          class="form-check mt-4"
          action="/dashboard/update-user"
        >
          <div class="form-outline mb-4">
            <label class="form-label">Your Name</label>
            <input type="hidden" name="id" value="<%=users._id %>" />
            <input
              type="text"
              id="name"
              value="<%=users.name %>"
              name="name"
              class="form-control"
              placeholder="Enter your name..."
            />
          </div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label">Email address</label>
            <input
              type="email"
              id="email"
              value="<%=users.email %>"
              name="email"
              class="form-control"
              placeholder="Enter your email address..."
            />
          </div>
          <button
            type="submit"
            class="btn btn-primary btn-block mb-4"
            style="float: right"
          >
            Submit
          </button>
        </form>
      </div>
    </main>
    <script src="/js/index.js"></script>
  </body>
</html>
